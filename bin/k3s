#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

k3sctl up
k3sctl config > ~/.kube/k3s.yaml

reg=localhost:5000
kc=~/.kube/k3s.yaml
cat <<EOF
export DOCKER_REGISTRY=$reg
export DEV_REGISTRY=$reg
export TELEPRESENCE_REGISTRY=$reg
export KUBECONFIG=$kc
export DEV_KUBECONFIG=$kc
# eval \$(k3s)
EOF
