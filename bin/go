#!/usr/bin/env python

import sys
import os
import glob

if len(sys.argv) > 1:
    argv = sys.argv[:]
    argv[0] = "/usr/local/bin/go"
    os.execv(argv[0], argv)
    exit(0)  # not reached

if glob.glob("GO.*"):
    os.execlp("bash", "bash", "-c", "./GO.*")
    exit(0)  # not reached

exit("%s: No GO file found (./GO.*). Use `go -h` to see compiler help." % sys.argv[0])
